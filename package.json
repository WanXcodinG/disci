{
  "name": "@discijs/main",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "yarn run build:disci",
    "build:disci": "turbo run build --filter=disci",
    "build:docs": "turbo run build --filter=@discijs/docs",
    "build:forge": "turbo run build --filter=@discijs/forge",
    "build:utils": "turbo run build --filter=@discijs/utils",
    "dev": "turbo run dev --parallel",
    "dev:disci": "turbo run dev --filter=disci",
    "dev:docs": "turbo run dev --filter=@discijs/docs",
    "dev:example": "turbo run dev --filter=@discijs/example",
    "serve:docs": "turbo run serve --filter=@discijs/docs",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "release": "pnpm run build:packages && pnpm run alpha:publish",
    "alpha:publish": "changesets publish --tag alpha",
    "alpha:version": "changeset version --snapshot alpha"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "eslint-config-custom": "workspace:*",
    "tsup": "^6.6.0",
    "turbo": "latest",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@8.1.1",
  "dependencies": {
    "prettier": "^2.8.7"
  }
}
