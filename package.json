{
  "name": "@discijs/main",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:disci": "turbo run build --filter=disci",
    "build:docs": "turbo run build --filter=@disci/docs",
    "build:forge": "turbo run build --filter=@disci/forge",
    "dev": "turbo run dev --parallel",
    "dev:disci": "turbo run dev --filter=disci",
    "dev:docs": "turbo run dev --filter=@disci/docs",
    "dev:example": "turbo run dev --filter=@disci/example",
    "serve:docs": "turbo run serve --filter=@disci/docs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest",
    "typedoc": "0.23.23",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.3.0",
  "dependencies": {
    "@changesets/cli": "^2.26.0"
  }
}
